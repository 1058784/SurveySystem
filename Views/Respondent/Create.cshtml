            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.MStatus, new SelectList(
                        new List<Object>{
                           new { value = "single" , text = "Single"  },
                           new { value = "married" , text = "Married"  },
                           new { value = "widowed" , text = "Widowed"  },
                           new { value = "other" , text = "Other"  }
                        },
                        "value", "text", 2), htmlAttributes: new { @class = "col-md-10 form-control dropdown" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

